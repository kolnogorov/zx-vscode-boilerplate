{
        "version": "2.0.1",
        "type": "shell",
        "isBackground": false,
        "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
        },
        "problemMatcher": "$errmatcher-sjasmplus",
        "tasks": [
                {
                        "label": "build",
                        "windows": {
                                "command": "scripts\\compile.bat ${file}",
                        },
                        "osx": {
                                "command": "./scripts/compile-macos.sh",
                        },
                        "linux": {
                                "command": "./scripts/compile-linux.sh",
                        },
                        "command": "make build",
                        "options": {
                                "cwd": "${workspaceFolder}",
                        },
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        }
                }
        ]
}